<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hpe.jpn.yoritaka.recordsample.MainActivity">

    <Button
        android:text="録音(MR)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        android:id="@+id/btnRecStartMR" />

    <Button
        android:text="終了(MR)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRecStopMR"
        android:layout_alignBaseline="@+id/btnRecStartMR"
        android:layout_alignBottom="@+id/btnRecStartMR"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="録音(AR)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecStartMR"
        android:layout_alignLeft="@+id/btnRecStartMR"
        android:layout_alignStart="@+id/btnRecStartMR"
        android:layout_marginTop="37dp"
        android:id="@+id/btnRecStartAR" />

    <Button
        android:text="終了(AR)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnRecStartAR"
        android:layout_alignLeft="@+id/btnRecStopMR"
        android:layout_alignStart="@+id/btnRecStopMR"
        android:id="@+id/btnRecStopAR" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:id="@+id/btnPlayStart" />

    <Button
        android:text="終了"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPlayStart"
        android:layout_alignRight="@+id/btnRecStopAR"
        android:layout_alignEnd="@+id/btnRecStopAR"
        android:id="@+id/btnPlayStop" />
</RelativeLayout>
